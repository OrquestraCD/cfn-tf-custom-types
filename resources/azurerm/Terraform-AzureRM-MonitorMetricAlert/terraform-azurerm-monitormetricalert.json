{
    "typeName": "Terraform::AzureRM::MonitorMetricAlert",
    "description": "Manages a Metric Alert within Azure Monitor.",
    "sourceUrl": "https://github.com/iann0036/cfn-tf-custom-types.git",
    "definitions": {
        "Action": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "ActionGroupId": {
                    "type": "string",
                    "description": "The ID of the Action Group can be sourced from [the `azurerm_monitor_action_group` resource](./monitor_action_group.html)."
                },
                "WebhookProperties": {
                    "type": "array",
                    "insertionOrder": true,
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "MapKey": {
                                "type": "string"
                            },
                            "MapValue": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "MapKey",
                            "MapValue"
                        ]
                    },
                    "description": "The map of custom string properties to include with the post operation. These data are appended to the webhook payload."
                }
            },
            "required": [
                "ActionGroupId"
            ]
        },
        "Criteria": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Aggregation": {
                    "type": "string",
                    "description": "The statistic that runs over the metric values. Possible values are `Average`, `Count`, `Minimum`, `Maximum` and `Total`."
                },
                "MetricName": {
                    "type": "string",
                    "description": "One of the metric names to be monitored."
                },
                "MetricNamespace": {
                    "type": "string",
                    "description": "One of the metric namespaces to be monitored."
                },
                "Operator": {
                    "type": "string",
                    "description": "The criteria operator. Possible values are `Equals`, `NotEquals`, `GreaterThan`, `GreaterThanOrEqual`, `LessThan` and `LessThanOrEqual`."
                },
                "Threshold": {
                    "type": "number",
                    "description": "The criteria threshold value that activates the alert."
                },
                "Dimension": {
                    "type": "array",
                    "insertionOrder": true,
                    "items": {
                        "$ref": "#/definitions/Dimension"
                    }
                }
            },
            "required": [
                "Aggregation",
                "MetricName",
                "MetricNamespace",
                "Operator",
                "Threshold"
            ]
        },
        "Timeouts": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Create": {
                    "type": "string"
                },
                "Delete": {
                    "type": "string"
                },
                "Read": {
                    "type": "string"
                },
                "Update": {
                    "type": "string"
                }
            },
            "required": []
        },
        "Dimension": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Name": {
                    "type": "string",
                    "description": "One of the dimension names."
                },
                "Operator": {
                    "type": "string",
                    "description": "The dimension operator. Possible values are `Include` and `Exclude`."
                },
                "Values": {
                    "type": "array",
                    "insertionOrder": false,
                    "items": {
                        "type": "string"
                    },
                    "description": "The list of dimension values."
                }
            },
            "required": [
                "Name",
                "Operator",
                "Values"
            ]
        }
    },
    "properties": {
        "tfcfnid": {
            "description": "Internal identifier for tracking resource changes. Do not use.",
            "type": "string"
        },
        "AutoMitigate": {
            "type": "boolean",
            "description": "Should the alerts in this Metric Alert be auto resolved? Defaults to `true`."
        },
        "Description": {
            "type": "string",
            "description": "The description of this Metric Alert."
        },
        "Enabled": {
            "type": "boolean",
            "description": "Should this Metric Alert be enabled? Defaults to `true`."
        },
        "Frequency": {
            "type": "string",
            "description": "The evaluation frequency of this Metric Alert, represented in ISO 8601 duration format. Possible values are `PT1M`, `PT5M`, `PT15M`, `PT30M` and `PT1H`. Defaults to `PT1M`."
        },
        "Id": {
            "type": "string"
        },
        "Name": {
            "type": "string",
            "description": "The name of the Metric Alert. Changing this forces a new resource to be created."
        },
        "ResourceGroupName": {
            "type": "string",
            "description": "The name of the resource group in which to create the Metric Alert instance."
        },
        "Scopes": {
            "type": "array",
            "insertionOrder": true,
            "items": {
                "type": "string"
            },
            "description": "A set of strings of resource IDs at which the metric criteria should be applied."
        },
        "Severity": {
            "type": "number",
            "description": "The severity of this Metric Alert. Possible values are `0`, `1`, `2`, `3` and `4`. Defaults to `3`."
        },
        "Tags": {
            "type": "array",
            "insertionOrder": true,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "MapKey": {
                        "type": "string"
                    },
                    "MapValue": {
                        "type": "string"
                    }
                },
                "required": [
                    "MapKey",
                    "MapValue"
                ]
            },
            "description": "A mapping of tags to assign to the resource."
        },
        "WindowSize": {
            "type": "string",
            "description": "The period of time that is used to monitor alert activity, represented in ISO 8601 duration format. This value must be greater than `frequency`. Possible values are `PT1M`, `PT5M`, `PT15M`, `PT30M`, `PT1H`, `PT6H`, `PT12H` and `P1D`. Defaults to `PT5M`."
        },
        "Action": {
            "type": "array",
            "insertionOrder": true,
            "items": {
                "$ref": "#/definitions/Action"
            }
        },
        "Criteria": {
            "type": "array",
            "insertionOrder": false,
            "items": {
                "$ref": "#/definitions/Criteria"
            },
            "minItems": 1
        },
        "Timeouts": {
            "$ref": "#/definitions/Timeouts"
        },
        "Dimension": {
            "type": "array",
            "insertionOrder": false,
            "items": {
                "$ref": "#/definitions/Dimension"
            }
        }
    },
    "additionalProperties": false,
    "required": [
        "Name",
        "ResourceGroupName",
        "Scopes"
    ],
    "readOnlyProperties": [
        "/properties/tfcfnid",
        "/properties/Id"
    ],
    "primaryIdentifier": [
        "/properties/Id"
    ],
    "handlers": {
        "create": {
            "permissions": [
                "s3:PutObject",
                "secretsmanager:GetSecretValue"
            ]
        },
        "read": {
            "permissions": []
        },
        "update": {
            "permissions": [
                "s3:GetObject",
                "s3:PutObject",
                "secretsmanager:GetSecretValue"
            ]
        },
        "delete": {
            "permissions": [
                "s3:GetObject",
                "s3:DeleteObject",
                "secretsmanager:GetSecretValue"
            ]
        },
        "list": {
            "permissions": []
        }
    }
}