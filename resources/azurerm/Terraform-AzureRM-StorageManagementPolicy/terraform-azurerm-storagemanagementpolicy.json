{
    "typeName": "Terraform::AzureRM::StorageManagementPolicy",
    "description": "Manages an Azure Storage Account Management Policy.",
    "sourceUrl": "https://github.com/iann0036/cfn-tf-custom-types.git",
    "definitions": {
        "Rule": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Enabled": {
                    "type": "boolean",
                    "description": "Boolean to specify whether the rule is enabled."
                },
                "Name": {
                    "type": "string",
                    "description": "A rule name can contain any combination of alpha numeric characters. Rule name is case-sensitive. It must be unique within a policy."
                },
                "Actions": {
                    "type": "array",
                    "insertionOrder": true,
                    "items": {
                        "$ref": "#/definitions/Actions"
                    },
                    "maxItems": 1,
                    "minItems": 1
                },
                "Filters": {
                    "type": "array",
                    "insertionOrder": true,
                    "items": {
                        "$ref": "#/definitions/Filters"
                    },
                    "maxItems": 1
                }
            },
            "required": [
                "Enabled",
                "Name"
            ]
        },
        "Timeouts": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Create": {
                    "type": "string"
                },
                "Delete": {
                    "type": "string"
                },
                "Read": {
                    "type": "string"
                },
                "Update": {
                    "type": "string"
                }
            },
            "required": []
        },
        "Actions": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "BaseBlob": {
                    "type": "array",
                    "insertionOrder": true,
                    "items": {
                        "$ref": "#/definitions/BaseBlob"
                    },
                    "maxItems": 1
                },
                "Snapshot": {
                    "type": "array",
                    "insertionOrder": true,
                    "items": {
                        "$ref": "#/definitions/Snapshot"
                    },
                    "maxItems": 1
                }
            },
            "required": []
        },
        "Filters": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "BlobTypes": {
                    "type": "array",
                    "insertionOrder": true,
                    "items": {
                        "type": "string"
                    },
                    "description": "An array of predefined values. Only `blockBlob` is supported."
                },
                "PrefixMatch": {
                    "type": "array",
                    "insertionOrder": true,
                    "items": {
                        "type": "string"
                    },
                    "description": "An array of strings for prefixes to be matched."
                }
            },
            "required": []
        },
        "BaseBlob": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "DeleteAfterDaysSinceModificationGreaterThan": {
                    "type": "number",
                    "description": "The age in days after last modification to delete the blob. Must be at least 0."
                },
                "TierToArchiveAfterDaysSinceModificationGreaterThan": {
                    "type": "number",
                    "description": "The age in days after last modification to tier blobs to archive storage. Supports blob currently at Hot or Cool tier. Must be at least 0."
                },
                "TierToCoolAfterDaysSinceModificationGreaterThan": {
                    "type": "number",
                    "description": "The age in days after last modification to tier blobs to cool storage. Supports blob currently at Hot tier. Must be at least 0."
                }
            },
            "required": []
        },
        "Snapshot": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "DeleteAfterDaysSinceCreationGreaterThan": {
                    "type": "number",
                    "description": "The age in days after create to delete the snaphot. Must be at least 0."
                }
            },
            "required": []
        }
    },
    "properties": {
        "tfcfnid": {
            "description": "Internal identifier for tracking resource changes. Do not use.",
            "type": "string"
        },
        "Id": {
            "type": "string"
        },
        "StorageAccountId": {
            "type": "string",
            "description": "Specifies the id of the storage account to apply the management policy to."
        },
        "Rule": {
            "type": "array",
            "insertionOrder": false,
            "items": {
                "$ref": "#/definitions/Rule"
            }
        },
        "Timeouts": {
            "$ref": "#/definitions/Timeouts"
        },
        "Actions": {
            "type": "array",
            "insertionOrder": false,
            "items": {
                "$ref": "#/definitions/Actions"
            },
            "maxItems": 1,
            "minItems": 1
        },
        "Filters": {
            "type": "array",
            "insertionOrder": false,
            "items": {
                "$ref": "#/definitions/Filters"
            },
            "maxItems": 1
        },
        "BaseBlob": {
            "type": "array",
            "insertionOrder": false,
            "items": {
                "$ref": "#/definitions/BaseBlob"
            },
            "maxItems": 1
        },
        "Snapshot": {
            "type": "array",
            "insertionOrder": false,
            "items": {
                "$ref": "#/definitions/Snapshot"
            },
            "maxItems": 1
        }
    },
    "additionalProperties": false,
    "required": [
        "StorageAccountId"
    ],
    "readOnlyProperties": [
        "/properties/tfcfnid",
        "/properties/Id"
    ],
    "primaryIdentifier": [
        "/properties/Id"
    ],
    "handlers": {
        "create": {
            "permissions": [
                "s3:PutObject",
                "secretsmanager:GetSecretValue"
            ]
        },
        "read": {
            "permissions": []
        },
        "update": {
            "permissions": [
                "s3:GetObject",
                "s3:PutObject",
                "secretsmanager:GetSecretValue"
            ]
        },
        "delete": {
            "permissions": [
                "s3:GetObject",
                "s3:DeleteObject",
                "secretsmanager:GetSecretValue"
            ]
        },
        "list": {
            "permissions": []
        }
    }
}