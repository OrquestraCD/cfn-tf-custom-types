{
    "typeName": "Terraform::AzureRM::AppServiceCertificate",
    "description": "Manages an App Service certificate.",
    "sourceUrl": "https://github.com/iann0036/cfn-tf-custom-types.git",
    "definitions": {
        "Timeouts": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Create": {
                    "type": "string"
