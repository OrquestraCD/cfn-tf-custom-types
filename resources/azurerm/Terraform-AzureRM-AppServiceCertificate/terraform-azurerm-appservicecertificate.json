            "type": "string"
        },
        "ExpirationDate": {
            "type": "string"
        },
        "FriendlyName": {
            "type": "string"
        },
        "HostNames": {
            "type": "array",
            "insertionOrder": false,
            "items": {
                "type": "string"
            }
        },
        "Id": {
            "type": "string"
        },
        "IssueDate": {
            "type": "string"
        },
        "Issuer": {
            "type": "string"
        },
        "KeyVaultSecretId": {
            "type": "string",
            "description": "The ID of the Key Vault secret. Changing this forces a new resource to be created."
        },
        "Location": {
            "type": "string",
            "description": "Specifies the supported Azure location where the resource exists. Changing this forces a new resource to be created."
        },
        "Name": {
            "type": "string",
            "description": "Specifies the name of the certificate. Changing this forces a new resource to be created."
        },
        "Password": {
            "type": "string",
            "description": "The password to access the certificate's private key. Changing this forces a new resource to be created."
        },
        "PfxBlob": {
