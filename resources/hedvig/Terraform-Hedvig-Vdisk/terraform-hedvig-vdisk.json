{
    "typeName": "Terraform::Hedvig::Vdisk",
    "description": "Manages a Vdisk resource on a Hedvig cluster. For more information, visit [Hedvig's webpage](http://hedvig.io).",
    "sourceUrl": "https://github.com/iann0036/cfn-tf-custom-types.git",
    "definitions": {},
    "properties": {
        "tfcfnid": {
            "description": "Internal identifier for tracking resource changes. Do not use.",
            "type": "string"
        },
        "Name": {
            "type": "string",
            "description": "The name to be used by the Vdisk for identification."
        },
        "Residence": {
            "type": "string",
            "description": "Disk residence; can be either `HDD` or `Flash`."
        },
        "Size": {
            "type": "number",
            "description": "The size of the disk in GB."
        },
        "Type": {
            "type": "string",
            "description": "The type of the disk; can be either `BLOCK` or `NFS`."
        }
    },
    "additionalProperties": false,
    "required": [
        "Name",
        "Size",
        "Type"
    ],
    "readOnlyProperties": [
        "/properties/tfcfnid"
    ],
    "primaryIdentifier": [
        "/properties/tfcfnid"
    ],
    "handlers": {
        "create": {
            "permissions": [
                "s3:PutObject",
                "secretsmanager:GetSecretValue"
            ]
        },
        "read": {
            "permissions": []
        },
        "update": {
            "permissions": [
                "s3:GetObject",
                "s3:PutObject",
                "secretsmanager:GetSecretValue"
            ]
        },
        "delete": {
            "permissions": [
                "s3:GetObject",
                "s3:DeleteObject",
                "secretsmanager:GetSecretValue"
            ]
        },
        "list": {
            "permissions": []
        }
    }
}