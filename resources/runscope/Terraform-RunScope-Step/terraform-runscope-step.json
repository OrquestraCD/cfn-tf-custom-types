            "type": "array",
            "insertionOrder": false,
            "items": {
                "type": "string"
            }
        },
        "StepType": {
            "type": "string",
            "description": "The type of step.\n* [request](#request-steps)\n* pause\n* condition\n* ghost\n* subtest."
        },
        "TestId": {
            "type": "string",
            "description": "The id of the test to associate this step with."
