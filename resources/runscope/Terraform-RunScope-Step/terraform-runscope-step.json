                    "type": "string"
                },
                "Property": {
                    "type": "string"
                },
                "Source": {
                    "type": "string"
                }
            },
            "required": [
                "Name",
                "Source"
            ]
        }
    },
    "properties": {
        "tfcfnid": {
            "description": "Internal identifier for tracking resource changes. Do not use.",
            "type": "string"
        },
        "BeforeScripts": {
            "type": "array",
            "insertionOrder": false,
            "items": {
                "type": "string"
            }
