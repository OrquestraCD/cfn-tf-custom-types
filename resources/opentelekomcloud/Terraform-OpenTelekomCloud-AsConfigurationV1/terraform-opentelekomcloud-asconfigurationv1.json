{
    "typeName": "Terraform::OpenTelekomCloud::AsConfigurationV1",
    "description": "Manages a V1 AS Configuration resource within OpenTelekomCloud.",
    "sourceUrl": "https://github.com/iann0036/cfn-tf-custom-types.git",
    "definitions": {
        "InstanceConfig": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Flavor": {
                    "type": "string",
                    "description": "The flavor ID."
                },
                "Image": {
                    "type": "string",
                    "description": "The image ID."
                },
                "InstanceId": {
                    "type": "string",
                    "description": "When using the existing instance specifications as the template to\ncreate AS configurations, specify this argument. In this case, flavor, image,\nand disk arguments do not take effect. If the instance_id argument is not specified,\nflavor, image, and disk arguments are mandatory."
                },
                "KeyName": {
                    "type": "string",
                    "description": "The name of the SSH key pair used to log in to the instance."
                },
                "Metadata": {
                    "type": "array",
                    "insertionOrder": true,
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "MapKey": {
                                "type": "string"
                            },
                            "MapValue": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "MapKey",
                            "MapValue"
                        ]
                    },
                    "description": "Metadata key/value pairs to make available from\nwithin the instance."
                },
                "UserData": {
                    "type": "string",
                    "description": "The user data to provide when launching the instance.\nThe file content must be encoded with Base64."
                },
                "Disk": {
                    "type": "array",
                    "insertionOrder": true,
                    "items": {
                        "$ref": "#/definitions/Disk"
                    }
                },
                "Personality": {
                    "type": "array",
                    "insertionOrder": true,
                    "items": {
                        "$ref": "#/definitions/Personality"
                    },
                    "maxItems": 5
                },
                "PublicIp": {
                    "type": "array",
                    "insertionOrder": true,
                    "items": {
                        "$ref": "#/definitions/PublicIp"
                    },
                    "maxItems": 1
                }
            },
            "required": [
                "KeyName"
            ]
        },
        "Disk": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "DiskType": {
                    "type": "string",
                    "description": "Whether the disk is a system disk or a data disk. Option `DATA` indicates\na data disk. option `SYS` indicates a system disk."
                },
                "KmsId": {
                    "type": "string",
                    "description": "The Encryption KMS ID of the data disk."
                },
                "Size": {
                    "type": "number",
                    "description": "The disk size. The unit is GB. The system disk size ranges from 40 to 32768,\nand the data disk size ranges from 10 to 32768."
                },
                "VolumeType": {
                    "type": "string",
                    "description": "The disk type, which must be the same as the disk type available in the system.\nThe options include `SATA` (common I/O disk type) and `SSD` (ultra-high I/O disk type)."
                }
            },
            "required": [
                "DiskType",
                "Size",
                "VolumeType"
            ]
        },
        "Personality": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Content": {
                    "type": "string"
                },
                "Path": {
                    "type": "string",
                    "description": "The absolute path of the destination file."
                }
            },
            "required": [
                "Content",
                "Path"
            ]
        },
        "PublicIp": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Eip": {
                    "type": "array",
                    "insertionOrder": true,
                    "items": {
                        "$ref": "#/definitions/Eip"
                    },
                    "maxItems": 1,
                    "minItems": 1
                }
            },
            "required": []
        },
        "Eip": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "IpType": {
                    "type": "string",
                    "description": "The IP address type. The system only supports `5_bgp` (indicates dynamic BGP)."
                },
                "Bandwidth": {
                    "type": "array",
                    "insertionOrder": true,
                    "items": {
                        "$ref": "#/definitions/Bandwidth"
                    },
                    "maxItems": 1,
                    "minItems": 1
                }
            },
            "required": [
                "IpType"
            ]
        },
        "Bandwidth": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "ChargingMode": {
                    "type": "string",
                    "description": "The bandwidth charging mode. The system only supports `traffic`."
                },
                "ShareType": {
                    "type": "string",
                    "description": "The bandwidth sharing type. The system only supports `PER` (indicates exclusive bandwidth)."
                },
                "Size": {
                    "type": "number",
                    "description": "The bandwidth (Mbit/s). The value range is 1 to 300."
                }
            },
            "required": [
                "ChargingMode",
                "ShareType",
                "Size"
            ]
        }
    },
    "properties": {
        "tfcfnid": {
            "description": "Internal identifier for tracking resource changes. Do not use.",
            "type": "string"
        },
        "Id": {
            "type": "string"
        },
        "Region": {
            "type": "string"
        },
        "ScalingConfigurationName": {
            "type": "string",
            "description": "The name of the AS configuration. The name can contain letters,\ndigits, underscores(_), and hyphens(-), and cannot exceed 64 characters."
        },
        "InstanceConfig": {
            "type": "array",
            "insertionOrder": false,
            "items": {
                "$ref": "#/definitions/InstanceConfig"
            },
            "maxItems": 1,
            "minItems": 1
        },
        "Disk": {
            "type": "array",
            "insertionOrder": false,
            "items": {
                "$ref": "#/definitions/Disk"
            }
        },
        "Personality": {
            "type": "array",
            "insertionOrder": false,
            "items": {
                "$ref": "#/definitions/Personality"
            },
            "maxItems": 5
        },
        "PublicIp": {
            "type": "array",
            "insertionOrder": false,
            "items": {
                "$ref": "#/definitions/PublicIp"
            },
            "maxItems": 1
        },
        "Eip": {
            "type": "array",
            "insertionOrder": false,
            "items": {
                "$ref": "#/definitions/Eip"
            },
            "maxItems": 1,
            "minItems": 1
        },
        "Bandwidth": {
            "type": "array",
            "insertionOrder": false,
            "items": {
                "$ref": "#/definitions/Bandwidth"
            },
            "maxItems": 1,
            "minItems": 1
        }
    },
    "additionalProperties": false,
    "required": [
        "ScalingConfigurationName"
    ],
    "readOnlyProperties": [
        "/properties/tfcfnid",
        "/properties/Id"
    ],
    "primaryIdentifier": [
        "/properties/tfcfnid"
    ],
    "handlers": {
        "create": {
            "permissions": [
                "s3:PutObject",
                "secretsmanager:GetSecretValue"
            ]
        },
        "read": {
            "permissions": []
        },
        "update": {
            "permissions": [
                "s3:GetObject",
                "s3:PutObject",
                "secretsmanager:GetSecretValue"
            ]
        },
        "delete": {
            "permissions": [
                "s3:GetObject",
                "s3:DeleteObject",
                "secretsmanager:GetSecretValue"
            ]
        },
        "list": {
            "permissions": []
        }
    }
}