{
    "typeName": "Terraform::OpenTelekomCloud::ComputeBmsServerV2",
    "description": "Manages a BMS Server resource within OpenTelekomCloud.",
    "sourceUrl": "https://github.com/iann0036/cfn-tf-custom-types.git",
    "definitions": {
        "BlockDevice": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "BootIndex": {
                    "type": "number"
                },
                "DeleteOnTermination": {
                    "type": "boolean"
                },
                "DestinationType": {
                    "type": "string"
                },
                "DeviceName": {
                    "type": "string"
                },
                "GuestFormat": {
                    "type": "string"
                },
                "SourceType": {
                    "type": "string"
                },
                "Uuid": {
                    "type": "string"
                },
                "VolumeSize": {
                    "type": "number"
                },
                "VolumeType": {
                    "type": "string"
                }
            },
            "required": [
                "SourceType"
            ]
        },
        "Network": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "AccessNetwork": {
                    "type": "boolean",
                    "description": "Specifies if this network should be used for\nprovisioning access. Accepts true or false. Defaults to false."
                },
                "FixedIpV4": {
                    "type": "string",
                    "description": "Specifies a fixed IPv4 address to be used on this\nnetwork. Changing this creates a new bms server."
                },
                "FixedIpV6": {
                    "type": "string",
                    "description": "Specifies a fixed IPv6 address to be used on this\nnetwork. Changing this creates a new bms server."
                },
                "Name": {
                    "type": "string",
                    "description": "The human-readable\nname of the network. Changing this creates a new bms server."
                },
                "Port": {
                    "type": "string",
                    "description": "The port UUID of a\nnetwork to attach to the bms server. Changing this creates a new server."
                },
                "Uuid": {
                    "type": "string",
                    "description": "The network UUID to\nattach to the bms server. Changing this creates a new bms server."
                }
            },
            "required": []
        },
        "Timeouts": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Create": {
                    "type": "string"
                },
                "Delete": {
                    "type": "string"
                },
                "Update": {
                    "type": "string"
                }
            },
            "required": []
        }
    },
    "properties": {
        "tfcfnid": {
            "description": "Internal identifier for tracking resource changes. Do not use.",
            "type": "string"
        },
        "AccessIpV4": {
            "type": "string"
        },
        "AccessIpV6": {
            "type": "string"
        },
        "AdminPass": {
            "type": "string",
            "description": "The administrative password to assign to the bms server.\nChanging this changes the root password on the existing server."
        },
        "AvailabilityZone": {
            "type": "string",
            "description": "The availability zone in which to create\nthe bms server."
        },
        "ConfigDrive": {
            "type": "boolean"
        },
        "FlavorId": {
            "type": "string",
            "description": "The flavor ID of\nthe desired flavor for the bms server. Changing this resizes the existing bms server."
        },
        "FlavorName": {
            "type": "string",
            "description": "The name of the\ndesired flavor for the bms server. Changing this resizes the existing bms server."
        },
        "HostId": {
            "type": "string"
        },
        "HostStatus": {
            "type": "string"
        },
        "ImageId": {
            "type": "string",
            "description": "Changing this creates a new bms server."
        },
        "ImageName": {
            "type": "string",
            "description": "The name of the\ndesired image for the bms server. Changing this creates a new bms server."
        },
        "KernelId": {
            "type": "string"
        },
        "KeyPair": {
            "type": "string",
            "description": "The name of a key pair to put on the bms server. The key\npair must already be created and associated with the tenant's account.\nChanging this creates a new bms server."
        },
        "Metadata": {
            "type": "array",
            "insertionOrder": true,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "Key": {
                        "type": "string"
                    },
                    "Value": {
                        "type": "string"
                    }
                },
                "required": [
                    "Key",
                    "Value"
                ]
            },
            "description": "Metadata key/value pairs to make available from\nwithin the instance. Changing this updates the existing bms server metadata."
        },
        "Name": {
            "type": "string",
            "description": "The name of the BMS."
        },
        "Region": {
            "type": "string"
        },
        "SecurityGroups": {
            "type": "array",
            "insertionOrder": true,
            "items": {
                "type": "string"
            },
            "description": "An array of one or more security group names\nto associate with the bms server. Changing this results in adding/removing\nsecurity groups from the existing bms server."
        },
        "StopBeforeDestroy": {
            "type": "boolean",
            "description": "Whether to try stop instance gracefully\nbefore destroying it, thus giving chance for guest OS daemons to stop correctly.\nIf instance doesn't stop within timeout, it will be destroyed anyway."
        },
        "Tags": {
            "type": "array",
            "insertionOrder": true,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "Key": {
                        "type": "string"
                    },
                    "Value": {
                        "type": "string"
                    }
                },
                "required": [
                    "Key",
                    "Value"
                ]
            },
            "description": "Tags key/value pairs to associate with the instance."
        },
        "TenantId": {
            "type": "string"
        },
        "UserData": {
            "type": "string",
            "description": "The user data to provide when launching the instance.\nChanging this creates a new bms server."
        },
        "UserId": {
            "type": "string"
        },
        "BlockDevice": {
            "type": "array",
            "insertionOrder": false,
            "items": {
                "$ref": "#/definitions/BlockDevice"
            }
        },
        "Network": {
            "type": "array",
            "insertionOrder": false,
            "items": {
                "$ref": "#/definitions/Network"
            }
        },
        "Timeouts": {
            "$ref": "#/definitions/Timeouts"
        }
    },
    "additionalProperties": false,
    "required": [
        "AvailabilityZone",
        "Name"
    ],
    "readOnlyProperties": [
        "/properties/tfcfnid",
        "/properties/AccessIpV4",
        "/properties/AccessIpV6",
        "/properties/ConfigDrive",
        "/properties/HostId",
        "/properties/HostStatus",
        "/properties/KernelId",
        "/properties/TenantId",
        "/properties/UserId"
    ],
    "primaryIdentifier": [
        "/properties/tfcfnid"
    ],
    "handlers": {
        "create": {
            "permissions": [
                "s3:PutObject",
                "secretsmanager:GetSecretValue"
            ]
        },
        "read": {
            "permissions": []
        },
        "update": {
            "permissions": [
                "s3:GetObject",
                "s3:PutObject",
                "secretsmanager:GetSecretValue"
            ]
        },
        "delete": {
            "permissions": [
                "s3:GetObject",
                "s3:DeleteObject",
                "secretsmanager:GetSecretValue"
            ]
        },
        "list": {
            "permissions": []
        }
    }
}