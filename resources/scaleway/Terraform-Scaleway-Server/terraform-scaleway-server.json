{
    "typeName": "Terraform::Scaleway::Server",
    "description": "**DEPRECATED**: This resource is deprecated and will be removed in `v2.0+`.\nPlease use `scaleway_instance_server` instead.\n\nProvides servers. This allows servers to be created, updated and deleted.\nFor additional details please refer to [API documentation](https://developer.scaleway.com/#servers).",
    "sourceUrl": "https://github.com/iann0036/cfn-tf-custom-types.git",
    "documentationUrl": "https://github.com/iann0036/cfn-tf-custom-types/blob/docs/resources/scaleway/Terraform-Scaleway-Server/docs/README.md",
    "definitions": {
        "Volume": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "SizeInGb": {
                    "type": "number"
                },
                "Type": {
                    "type": "string"
                }
            },
            "required": [
                "SizeInGb",
                "Type"
            ]
        }
    },
    "properties": {
        "tfcfnid": {
            "description": "Internal identifier for tracking resource changes. Do not use.",
            "type": "string"
        },
        "BootType": {
            "type": "string",
            "description": "the boot mechanism for this server. Possible values include `local` and `bootscript`."
        },
        "Bootscript": {
            "type": "string",
            "description": "server bootscript."
        },
        "Cloudinit": {
            "type": "string",
            "description": "allows you to define cloudinit script for this server."
        },
        "DynamicIpRequired": {
            "type": "boolean",
            "description": "make server publicly available."
        },
        "EnableIpv6": {
            "type": "boolean",
            "description": "enable ipv6."
        },
        "Id": {
            "type": "string"
        },
        "Image": {
            "type": "string",
            "description": "base image of server."
        },
        "Name": {
            "type": "string",
            "description": "name of server."
        },
        "PrivateIp": {
            "type": "string"
        },
        "PublicIp": {
            "type": "string",
            "description": "set a public ip previously created (a real ip is expected here, not its resource id)."
        },
        "PublicIpv6": {
            "type": "string",
            "description": "if `enable_ipv6` is set this contains the ipv6 address of your instance."
        },
        "SecurityGroup": {
            "type": "string",
            "description": "assign security group to server."
        },
        "State": {
            "type": "string",
            "description": "allows you to define the desired state of your server. Valid values include (`stopped`, `running`)."
        },
        "StateDetail": {
            "type": "string",
            "description": "contains details from the scaleway API the state of your instance."
        },
        "Tags": {
            "type": "array",
            "insertionOrder": false,
            "items": {
                "type": "string"
            },
            "description": "list of tags for server."
        },
        "Type": {
            "type": "string",
            "description": "type of server."
        },
        "Volume": {
            "type": "array",
            "insertionOrder": false,
            "items": {
                "$ref": "#/definitions/Volume"
            }
        }
    },
    "additionalProperties": false,
    "required": [
        "Image",
        "Name",
        "Type"
    ],
    "readOnlyProperties": [
        "/properties/tfcfnid",
        "/properties/Id",
        "/properties/PrivateIp",
        "/properties/PublicIpv6",
        "/properties/StateDetail"
    ],
    "primaryIdentifier": [
        "/properties/tfcfnid"
    ],
    "handlers": {
        "create": {
            "permissions": [
                "s3:PutObject",
                "secretsmanager:GetSecretValue"
            ]
        },
        "read": {
            "permissions": []
        },
        "update": {
            "permissions": [
                "s3:GetObject",
                "s3:PutObject",
                "secretsmanager:GetSecretValue"
            ]
        },
        "delete": {
            "permissions": [
                "s3:GetObject",
                "s3:DeleteObject",
                "secretsmanager:GetSecretValue"
            ]
        },
        "list": {
            "permissions": []
        }
    }
}