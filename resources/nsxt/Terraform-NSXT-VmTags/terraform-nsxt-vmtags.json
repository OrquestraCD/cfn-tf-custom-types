            "type": "string"
        },
        "Id": {
            "type": "string"
        },
        "InstanceId": {
            "type": "string",
            "description": "BIOS Id of the Virtual Machine."
        },
        "LogicalPortTag": {
            "type": "array",
            "insertionOrder": true,
            "items": {
                "$ref": "#/definitions/LogicalPortTag"
