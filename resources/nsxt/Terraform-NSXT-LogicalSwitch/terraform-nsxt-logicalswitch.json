{
    "typeName": "Terraform::NSXT::LogicalSwitch",
    "description": "This resource provides a method to create overlay logical switch in NSX. Virtual machines can then be connected to the appropriate logical switch for the desired topology and network connectivity.",
    "sourceUrl": "https://github.com/iann0036/cfn-tf-custom-types.git",
    "definitions": {
        "AddressBinding": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "IpAddress": {
                    "type": "string"
                },
                "MacAddress": {
                    "type": "string"
                },
                "Vlan": {
                    "type": "number"
                }
            },
            "required": []
        },
        "SwitchingProfileId": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Key": {
                    "type": "string"
                },
                "Value": {
                    "type": "string"
                }
            },
            "required": [
                "Key",
                "Value"
            ]
        },
        "Tag": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Scope": {
                    "type": "string"
                },
                "Tag": {
                    "type": "string"
                }
            },
            "required": [
                "Scope",
                "Tag"
            ]
        }
    },
    "properties": {
        "tfcfnid": {
            "description": "Internal identifier for tracking resource changes. Do not use.",
            "type": "string"
        },
        "AdminState": {
            "type": "string",
            "description": "Admin state for the logical switch. Accepted values - 'UP' or 'DOWN'. The default value is 'UP'."
        },
        "Description": {
            "type": "string",
            "description": "Description of the resource."
        },
        "DisplayName": {
            "type": "string",
            "description": "Display name, defaults to ID if not set."
        },
        "Id": {
            "type": "string"
        },
        "IpPoolId": {
            "type": "string",
            "description": "Ip Pool ID to be associated with the logical switch."
        },
        "MacPoolId": {
            "type": "string",
            "description": "Mac Pool ID to be associated with the logical switch."
        },
        "ReplicationMode": {
            "type": "string",
            "description": "Replication mode of the Logical Switch. Accepted values - 'MTEP' (Hierarchical Two-Tier replication) and 'SOURCE' (Head Replication), with 'MTEP' being the default value. Applies to overlay logical switches."
        },
        "Revision": {
            "type": "number"
        },
        "TransportZoneId": {
            "type": "string",
            "description": "Transport Zone ID for the logical switch."
        },
        "Vlan": {
            "type": "number",
            "description": "Vlan for vlan logical switch. This attribute is deprecated, please use nsxt_vlan_logical_switch resource to manage vlan logical switches."
        },
        "Vni": {
            "type": "number",
            "description": "Vni for the logical switch."
        },
        "AddressBinding": {
            "type": "array",
            "insertionOrder": true,
            "items": {
                "$ref": "#/definitions/AddressBinding"
            }
        },
        "SwitchingProfileId": {
            "type": "array",
            "insertionOrder": true,
            "items": {
                "$ref": "#/definitions/SwitchingProfileId"
            }
        },
        "Tag": {
            "type": "array",
            "insertionOrder": true,
            "items": {
                "$ref": "#/definitions/Tag"
            }
        }
    },
    "additionalProperties": false,
    "required": [
        "TransportZoneId"
    ],
    "readOnlyProperties": [
        "/properties/tfcfnid",
        "/properties/Id",
        "/properties/Revision"
    ],
    "primaryIdentifier": [
        "/properties/Id"
    ],
    "handlers": {
        "create": {
            "permissions": [
                "s3:PutObject",
                "secretsmanager:GetSecretValue"
            ]
        },
        "read": {
            "permissions": []
        },
        "update": {
            "permissions": [
                "s3:GetObject",
                "s3:PutObject",
                "secretsmanager:GetSecretValue"
            ]
        },
        "delete": {
            "permissions": [
                "s3:GetObject",
                "s3:DeleteObject",
                "secretsmanager:GetSecretValue"
            ]
        },
        "list": {
            "permissions": []
        }
    }
}