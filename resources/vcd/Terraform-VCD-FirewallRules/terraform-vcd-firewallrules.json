        "Rule": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "Description": {
                    "type": "string"
                },
                "DestinationIp": {
                    "type": "string"
                },
                "DestinationPort": {
                    "type": "string"
                },
                "Id": {
                    "type": "string"
                },
                "Policy": {
                    "type": "string"
                },
                "Protocol": {
                    "type": "string"
                },
